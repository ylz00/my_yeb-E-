<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xxxx.server.mapper.RoleMapper">


<!--    根据用户id查询角色列表-->
    <select id="getRoles" resultType="com.xxxx.server.entity.Role">
        SELECT
            r.id,
            r.name,
            r.nameZh
        FROM
            t_role r
                LEFT JOIN t_admin_role ar ON r.id = ar.rid
        WHERE
            ar.adminId = #{adminId}
    </select>
</mapper>
